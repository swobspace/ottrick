<h1><%= t('controller.tickets') %></h1>

<table id="dataTable" class="table table-bordered table-striped dataTable">
<thead>
  <tr>
    <th><%= t('attributes.ticketfor') %></th>
    <th><%= t('attributes.ticketfor_type') %></th>
    <th><%= t('attributes.sender') %></th>
    <th><%= t('attributes.otrs_queue') %></th>
    <th><%= t('attributes.subject') %></th>
    <th><%= t('attributes.text') %></th>
    <th><%= t('attributes.ticketnumber') %></th>
    <th><%= t('attributes.otrs_ticket_id') %></th>
    <th></th>
  </tr>
</thead>
<tbody>

<% @tickets.each do |ticket| %>
  <%= content_tag_for(:tr, ticket) do %>
    <td><%= ticket.ticketfor %></td>
    <td><%= ticket.ticketfor_type %></td>
    <td><%= ticket.sender %></td>
    <td><%= ticket.otrs_queue %></td>
    <td><%= ticket.subject %></td>
    <td><%= ticket.text %></td>
    <td><%= otrs_ticket_link(ticket, :number) %></td>
    <td><%= otrs_ticket_link(ticket, :id) %></td>
    <td class="nowrap">
      <%= show_link [ottrick, ticket] %>
      <%= edit_link [ottrick, ticket] %>
      <%= delete_link [ottrick, ticket] %>
    </td>
  <% end %>
<% end %>
</tbody>
</table>

<br />

<%= back_link %>
<%= new_link [ottrick, Ottrick::Ticket ] %>
